  <artifactId>xmdlab-maven-plugin2</artifactId>
  <packaging>maven-plugin</packaging>
  <name>Xmdlab Maven Plugin 2 module [${project.artifactId}]</name>
  <description>Xmdlab Maven Plugin 2 module [${project.artifactId}]</description>

  <properties>
    <maven-api-version>3.0.3</maven-api-version>
    <mojo.java.target>${java-version}</mojo.java.target>
  </properties>

  <build>
    <plugins>
      <plugin>
        <!-- see http://jira.codehaus.org/browse/MNG-5346 -->
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-plugin-plugin</artifactId>
        <configuration>
          <goalPrefix>xmdlab2</goalPrefix>
          <!-- see http://jira.codehaus.org/browse/MNG-5346 -->
          <skipErrorNoDescriptorsFound>true</skipErrorNoDescriptorsFound>
        </configuration>
        <executions>
          <execution>
            <id>default-descriptor</id>
            <goals>
              <goal>descriptor</goal>
            </goals>
            <phase>process-classes</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <!-- make sure our code only has 1.6 dependencies -->
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>animal-sniffer-maven-plugin</artifactId>
      </plugin>
