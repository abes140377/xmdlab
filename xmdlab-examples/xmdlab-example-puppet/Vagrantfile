
Vagrant.configure('2') do |config|
  
  config.vm.define "appserver" do |appserver|
    appserver.vm.box = "precise64"
    appserver.vm.box_url = "http://files.vagrantup.com/precise64.box"
    appserver.vm.network :forwarded_port, guest: 80, host: 8080
    appserver.vm.provision :puppet do |puppet|
      puppet.manifests_path = "manifests"
      puppet.manifest_file  = "site.pp"
      puppet.module_path    = "modules"
    end
    config.vm.provision :shell, :inline => 'echo Visit http://appserver:8080/...'
  end
  
  config.vm.define "bloghost" do |bloghost|
    bloghost.vm.box = "precise64"
    bloghost.vm.box_url = "http://files.vagrantup.com/precise64.box"
    bloghost.vm.network :forwarded_port, guest: 80, host: 8080
    bloghost.vm.provision :puppet do |puppet|
      puppet.manifests_path = "manifests"
      puppet.manifest_file  = "site.pp"
      puppet.module_path    = "modules"
    end
    config.vm.provision :shell, :inline => 'echo Visit http://bloghost:8080/...'
  end
end	
